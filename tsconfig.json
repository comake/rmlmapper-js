{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "lib": ["es2020", "dom"],
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
